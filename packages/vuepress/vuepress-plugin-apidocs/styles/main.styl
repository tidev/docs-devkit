.type-meta
  >.type-meta-name
    font-size: 0.75rem
    color: $gray-dk;
    text-align right
  >.type-meta-value
    font-size: 0.875rem
    margin-bottom 0.75rem;
    text-align right
.type-metas
  &>:last-child
    >.type-meta-value
      margin-bottom 0

.type-signature
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
  font-size: 0.875rem
  padding: 0.875rem 0.75rem
  border-left 5px solid $black-ltr

.content-loading
  margin 1rem 0

.parameter-table
  td:last-child
    width 100%

  .parameter-description
    div
      p
        margin 0
